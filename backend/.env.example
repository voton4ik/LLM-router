# Database
DATABASE_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require
# Раскомментируй, если сервер не поддерживает SSL (локальный PostgreSQL или ошибка "server does not support SSL"):
# DATABASE_SSL=false

# Chat history (optional; can be same Neon instance, different DB/schema, or separate)
# If unset, chat works without persisting history.
# CHAT_DATABASE_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/chatdb?sslmode=require
# CHAT_DATABASE_SSL=false

# JWT Secrets (генерировать: openssl rand -base64 32)
JWT_ACCESS_SECRET=your_super_secret_access_key_min_32_chars
JWT_REFRESH_SECRET=your_super_secret_refresh_key_min_32_chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Google OAuth
# Get these from https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# OpenRouter
OPENROUTER_API_KEY=your_api_key_here

# Anthropic (for Simple mode - claude-sonnet-4-5)
ANTHROPIC_API_KEY=

# OpenAI (for MAX mode - o1-pro)
OPENAI_API_KEY=

PORT=3001
# CORS: URL фронта. На Vercel (раздельный деплой) укажи URL фронта, например https://your-front.vercel.app
# Несколько доменов через запятую.
FRONTEND_URL=http://localhost:5173

# Solana Configuration
# Use mainnet-beta for production, devnet for testing
SOLANA_RPC_ENDPOINT=https://api.mainnet-beta.solana.com
SOLANA_WS_ENDPOINT=wss://api.mainnet-beta.solana.com
