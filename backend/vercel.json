{
  "version": 2,
  "buildCommand": "npm run build",
  "headers": [
    {
      "source": "/api/health",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, OPTIONS" },
        { "key": "Access-Control-Max-Age", "value": "60" }
      ]
    }
  ],
  "functions": {
    "api/[...path].ts": { "memory": 1024, "maxDuration": 60 }
  }
}
