{
  "version": 2,
  "buildCommand": "npm run build",
  "headers": [
    {
      "source": "/api/health",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, OPTIONS" },
        { "key": "Access-Control-Max-Age", "value": "60" }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://oneprompt-front.vercel.app" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS, PATCH" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization, X-Requested-With, Accept" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Expose-Headers", "value": "X-Chat-Session-Id" },
        { "key": "Access-Control-Max-Age", "value": "86400" }
      ]
    }
  ],
  "functions": {
    "api/[...path].ts": {
      "memory": 1024,
      "maxDuration": 60
    }
  }
}
